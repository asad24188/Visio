<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    android:paddingVertical="@dimen/_12sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingStart="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    android:background="@drawable/custom_edt_bg">

    <TextView
        android:id="@+id/tv_projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Projects 1"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

    <RelativeLayout
            android:id="@+id/address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_projectname"
            android:layout_marginTop="@dimen/_1sdp">

            <ImageView
                android:id="@+id/icon_marker"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_map_marker" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@id/icon_marker"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Boston, Ma"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_7sdp">

            <ImageView
                android:id="@+id/icon_calender"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@id/icon_calender"
                android:fontFamily="@font/poppins_light"
                android:includeFontPadding="false"
                android:text="10 Feb 2022"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9ssp" />

        </RelativeLayout>

</RelativeLayout>